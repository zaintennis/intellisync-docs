---

<section class="relative py-20 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-y-0 w-full h-full bg-muted/30 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"></div>
  </div>

  <div class="container px-4 mx-auto">
    <div class="max-w-2xl mx-auto mb-16 text-center">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl bg-clip-text text-transparent bg-gradient-to-r from-[#FF6B6B] via-[#4ECDC4] to-[#45B7D1]">
        Everything you need to succeed
      </h2>
      <p class="mt-4 text-lg text-muted-foreground">
        Comprehensive tools and resources to help you build amazing applications
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {features.map((feature, index) => (
        <>
          <div 
            class="relative bg-background rounded-xl border border-border/40 transition-all duration-300 hover:border-[#4ECDC4]/50 cursor-pointer"
            data-modal-target={`feature-modal-${index}`}
          >
            <div class="p-8">
              <div class="w-12 h-12 mb-6 rounded-lg flex items-center justify-center relative group">
                <div class="absolute inset-0 bg-gradient-to-br from-[#FF6B6B] via-[#4ECDC4] to-[#45B7D1] rounded-lg opacity-20 group-hover:opacity-30 transition-opacity"></div>
                <div class="relative">
                  <div class="w-6 h-6 [&>svg]:w-6 [&>svg]:h-6 [&>svg]:stroke-[#4ECDC4]" set:html={feature.icon} />
                </div>
              </div>
              
              <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
              <p class="text-muted-foreground mb-4">{feature.description}</p>
              
              <div class="flex items-center text-sm font-medium">
                <div class="group inline-flex items-center">
                  <span class="bg-gradient-to-r from-[#FF6B6B] via-[#4ECDC4] to-[#45B7D1] bg-clip-text text-transparent group-hover:opacity-80 transition-opacity">Learn more</span>
                  <svg xmlns="http://www.w3.org/2000/svg" 
                       class="w-4 h-4 ml-1 fill-[#4ECDC4] group-hover:translate-x-0.5 transition-transform" 
                       viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            </div>
          </div>

          <FeatureModal
            id={`feature-modal-${index}`}
            title={feature.title}
            description={feature.description}
            icon={feature.icon}
            gradient={feature.gradient}
            longDescription={feature.longDescription}
          />
        </>
      ))}
    </div>
  </div>
</section>

<style>
  .text-gradient {
    @apply bg-gradient-to-br from-[#FF6B6B] via-[#4ECDC4] to-[#45B7D1] bg-clip-text text-transparent;
  }
</style>

<script>
  // Initialize modal functionality
  function initializeModals() {
    // Add click handlers to feature cards
    document.querySelectorAll('[data-modal-target]').forEach(card => {
      card.addEventListener('click', () => {
        const modalId = card.getAttribute('data-modal-target');
        if (modalId) {  
          const modal = document.getElementById(modalId) as HTMLDialogElement;
          if (modal) {
            modal.showModal();
          }
        }
      });
    });

    // Handle clicking outside modals
    document.querySelectorAll('dialog').forEach(modal => {
      modal.addEventListener('click', (e) => {
        const dialogDimensions = modal.getBoundingClientRect();
        if (
          e.clientX < dialogDimensions.left ||
          e.clientX > dialogDimensions.right ||
          e.clientY < dialogDimensions.top ||
          e.clientY > dialogDimensions.bottom
        ) {
          modal.close();
        }
      });
    });
  }

  // Initialize when the DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeModals);
  } else {
    initializeModals();
  }
</script>
