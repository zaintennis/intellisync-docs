<div class="relative">
  <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
    <svg class="h-5 w-5 text-foreground/40" viewBox="0 0 20 20" fill="none" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.5 15a6.5 6.5 0 100-13 6.5 6.5 0 000 13zM17.5 17.5l-5-5"/>
    </svg>
  </div>
  <input
    type="search"
    class="block w-full rounded-lg border border-border/50 bg-card/50 py-2 pl-10 pr-3 text-sm placeholder:text-foreground/40 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none backdrop-blur-sm transition-colors"
    placeholder="Search documentation..."
  />
  <div class="absolute right-2 top-1/2 -translate-y-1/2 text-xs text-foreground/40">
    <kbd class="hidden rounded border border-border/50 bg-background px-1.5 py-0.5 font-mono shadow-sm sm:inline-block">âŒ˜K</kbd>
  </div>
</div>

<script>
  // Add keyboard shortcut
  document.addEventListener('keydown', (e) => {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      const searchInput = document.querySelector('input[type="search"]') as HTMLInputElement;
      searchInput?.focus();
    }
  });
</script>
