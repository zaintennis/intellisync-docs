---
interface Props {
  src: string;
  alt: string;
  class?: string;
}

const { src, alt, class: className } = Astro.props;
---

<div class:list={[
  "overflow-hidden rounded-xl border border-border/40 bg-muted/50 shadow-lg transition-all duration-300 hover:shadow-xl",
  className
]}>
  <img 
    src={src} 
    alt={alt} 
    class="w-full h-auto object-cover"
  />
</div>
